# ── Production Environment ────────────────────────────────────
# Copy to .env and fill in all values before running docker-compose.prod.yml

# ── PostgreSQL ────────────────────────────────────────────────
POSTGRES_USER=eadash
POSTGRES_PASSWORD=CHANGE-ME-strong-password
POSTGRES_DB=eadashboard

# ── JWT ───────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE-ME-generate-secure-key

# ── CORS ──────────────────────────────────────────────────────
CORS_ORIGINS=["https://your-domain.example.com"]

# ── Admin ─────────────────────────────────────────────────────
ADMIN_EMAIL=admin@your-domain.example.com
ADMIN_PASSWORD=CHANGE-ME-strong-admin-password

# ── Ports ─────────────────────────────────────────────────────
FRONTEND_PORT=443
HTTP_PORT=80

# ── Logging ───────────────────────────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json
