# ── Database ──────────────────────────────────────────────────
# SQLite (default, development):
DATABASE_URL=sqlite:///./data/ea-dashboard.db
# PostgreSQL (production):
# DATABASE_URL=postgresql://eadash:secret@db:5432/eadashboard

# ── CORS ──────────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ── JWT ───────────────────────────────────────────────────────
# REQUIRED in production — generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-me-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Initial Admin ─────────────────────────────────────────────
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
ADMIN_NAME=Administrator

# ── Logging (production) ──────────────────────────────────────
# LOG_LEVEL=info
# LOG_FORMAT=json
