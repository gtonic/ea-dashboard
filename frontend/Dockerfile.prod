FROM nginx:1.27-alpine

RUN apk add --no-cache curl openssl

# SSL directory for certificates
RUN mkdir -p /etc/nginx/ssl

# Nginx configurations
COPY frontend/nginx.prod.conf /etc/nginx/conf.d/default.conf

# Frontend files
COPY app/ /usr/share/nginx/html/

# Health check endpoint for nginx itself
RUN echo "OK" > /usr/share/nginx/html/health-nginx

EXPOSE 80 443

HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
  CMD curl -f http://localhost:80/health-nginx || exit 1
